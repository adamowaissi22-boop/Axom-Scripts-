local script = -- paste your script here in your script

local function createLoadingUI(scriptName, creatorName)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    
    local loadingFrame = Instance.new("Frame")
    loadingFrame.Name = "LoadingFrame"
    loadingFrame.Size = UDim2.new(0, 0, 0, 0)
    loadingFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    loadingFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    loadingFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    loadingFrame.BorderSizePixel = 0
    loadingFrame.ClipsDescendants = true
    loadingFrame.Parent = screenGui

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = loadingFrame

    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(0, 150, 255)
    stroke.Thickness = 2
    stroke.Parent = loadingFrame

    loadingFrame:TweenSize(UDim2.new(0, 300, 0, 200), "Out", "Quad", 0.5, true)

    wait(0.5)

    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(0, 260, 0, 40)
    title.Position = UDim2.new(0.5, 0, 0.1, 0)
    title.AnchorPoint = Vector2.new(0.5, 0)
    title.BackgroundTransparency = 1
    title.Text = scriptName
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextScaled = true
    title.Font = Enum.Font.GothamBold
    title.Parent = loadingFrame

    local creator = Instance.new("TextLabel")
    creator.Name = "Creator"
    creator.Size = UDim2.new(0, 260, 0, 30)
    creator.Position = UDim2.new(0.5, 0, 0.4, 0)
    creator.AnchorPoint = Vector2.new(0.5, 0)
    creator.BackgroundTransparency = 1
    creator.Text = creatorName
    creator.TextColor3 = Color3.fromRGB(200, 200, 200)
    creator.TextScaled = true
    creator.Font = Enum.Font.Gotham
    creator.Parent = loadingFrame

    local gameLabel = Instance.new("TextLabel")
    gameLabel.Name = "GameName"
    gameLabel.Size = UDim2.new(0, 260, 0, 30)
    gameLabel.Position = UDim2.new(0.5, 0, 0.6, 0)
    gameLabel.AnchorPoint = Vector2.new(0.5, 0)
    gameLabel.BackgroundTransparency = 1
    gameLabel.Text = "--- " .. game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name .. " ---"
    gameLabel.TextColor3 = Color3.fromRGB(0, 150, 255)
    gameLabel.TextScaled = true
    gameLabel.Font = Enum.Font.Gotham
    gameLabel.Parent = loadingFrame

    local loadingBar = Instance.new("Frame")
    loadingBar.Name = "LoadingBar"
    loadingBar.Size = UDim2.new(0, 0, 0, 4)
    loadingBar.Position = UDim2.new(0.5, 0, 0.85, 0)
    loadingBar.AnchorPoint = Vector2.new(0.5, 0.5)
    loadingBar.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
    loadingBar.BorderSizePixel = 0
    loadingBar.Parent = loadingFrame

    local barCorner = Instance.new("UICorner")
    barCorner.CornerRadius = UDim.new(1, 0)
    barCorner.Parent = loadingBar

    loadingBar:TweenSize(UDim2.new(0, 260, 0, 4), "Out", "Quad", 3, true)

    wait(4)

    loadingFrame:TweenSize(UDim2.new(0, 0, 0, 0), "Out", "Quad", 0.5, true)
    wait(0.5)
    screenGui:Destroy()
end

createLoadingUI("Loading Script", "Made by Axom")
wait(4.5)

loadstring(script)()
